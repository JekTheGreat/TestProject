{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {"@src/*": ["./src/*"]}
  },

  "include": ["**/*.ts", "**/*.tsx", "/src/*", "**/*.json"],
  "exclude": ["node_modules", "**/*.js"]
}
